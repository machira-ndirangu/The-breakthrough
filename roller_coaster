height_teger = int(height)
if height_teger >= 120 :
    age = input("how old are you \n")
    age_teger = int(age)
    if 12 < age_teger < 18 :
        bill = 7
        print("kindly pay 7$ to ride the rollercoaster ")
    elif age_teger <=  12:
        bill = 10
        print("kindly pay 10$ ")
    elif 45 <= age_teger <= 55 :
        bill = 0
        print("congraturations , you will be riding for free today ")
    else :
        bill = 12
        print("kindly pay 12$ to ride the rollercoaster ")
    pic_fee = input("do you want a picture  while on the rollercoaster ? yes or no ")
    if "yes" :
        bill = int(bill) + 3
        if "no " :
              bill = bill
else:
    print("you do not qualify to ride the rollercoaster")
print(f"your total bill is {bill} $")
                                      
